{
    "name": "rightclickfix",
    "displayName": "RightClickFix",
    "description": "Fixes the functionality of right clicking on a file to add a new file or folder",
    "version": "1.0.0",
    "publisher": "codyschrank",
    "repository": {
        "type": "github",
        "url": "https://github.com/CodySchrank/RightClickFix"
    },
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "contributes": {
        "menus": {
            "explorer/context": [{
                "command": "explorer.newFile",
                "group": "navigation",
                "when": "filesExplorerFocus && !explorerResourceIsFolder"
            },{
                "command": "explorer.newFolder",
                "group": "navigation",
                "when": "filesExplorerFocus && !explorerResourceIsFolder"
            }],
            "commandPalette": [{
                "command": "explorer.newFile",
                "when": "false"
            },{
                "command": "explorer.newFolder",
                "when": "false"
            }]

        },
        "commands": [
            {
                "command": "explorer.newFile",
                "title": "New File"
            },
            {
                "command": "explorer.newFolder",
                "title": "New Folder"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
